/* pages/tor/tor.wxss */
/* 顶部导航栏样式 */
.nav{
  font-size: 15px;
  width: 100%;
  height: 25px;
  display: flex;
  flex-direction: row;
  position: fixed;
  border-bottom: 5rpx solid #ccc;
  background:white;
}
.nav text{
  font-size: 12px;
  line-height: 25px;
  margin-left: 15px;
}
.navc{
  display: flex;
  flex-direction: row;
  width: 120px;
  margin:0 auto; 
}
.tab-item {
  text-align: center;
  font-size: 12px;  
  margin-left: 10px;
  line-height: 25px;
  color: #777;
} 
.img image{
  width:15px;
  position: fixed;
  top:4px;
  right: 0;
}
.on{
  color:green;
  border-bottom: 2px solid red;
}

/* 搜索框样式 */
.showaginview{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 35px;
  margin: 0 0 0 2px;
  padding-top:25px; 
}
.showaginview>input{
  width: 60%;
  border: 1px solid #ccc;
  border-radius: 3px;
  height: 30px;
  margin: 8px 0;
}
.placeset{
  font-size: 10px;
}
.showaginview>button{
  width: 20%;
  height: auto;
  margin-top: 8px;
}
.container{
  padding-top: 30px;
}
.falcon{
  padding-top: 8px;
}
.tors{
  display: flex;
  flex-direction: row;
  margin: 5px;
  border: 1px solid #ccc;
}
.tors image{
  width: 120px;
}
.tors>text{
  /* border: 1px solid #ccc; */
  width: 200px;
  margin: auto 5px;
  font-size: 12px;
}
.tors .name{
  color: deepskyblue;
  font-size: 15px;
}